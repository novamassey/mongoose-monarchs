<%- include('../partials/header'); %>

    <form id="user-profile" action="/users" method="POST">
        <label>Name:</label>
        <input type="text" name="name" value="<%= user.name %>">
        <br>
        <label>Email:</label>
        <input name="email" value="<%= user.email %>">
        <br>
        </form>

        <form id="trades" action="/users/<$user._id%>?_method=PUT" method="POST">
            <h2>TRADES</H2>
                <h4>If you would like to connect with other users to trade supplies check off items you have and items you need!</h4>
        <label>Things I Have to Trade:</label>
        <input type="checkbox" class="haves" name="Eggs">Eggs</input>
        <input type="checkbox" class="haves" name="Caterpillars">Caterpillars</input>
        <input type="checkbox" class="haves" name="Milkweed">Milkweed</input>
        <input type="checkbox" class="haves" name="Milkweed Seeds">Milkweed Seeds</input>
        <input type="checkbox" class="haves" name="Enclosure">Enclosure</input>
        <input type="checkbox" class="haves" name="Pollinators">Pollinators</input>
        <input type="submit" value="Update Haves">
        <br>
        <label>Things I Need:</label>
        <input type="checkbox" class="needs" name="Eggs">Eggs</input>
        <input type="checkbox" class="needs" name="Caterpillars">Caterpillars</input>
        <input type="checkbox" class="needs" name="Milkweed">Milkweed</input>
        <input type="checkbox" class="needs" name="Milkweed Seeds">Milkweed Seeds</input>
        <input type="checkbox" class="needs" name="Enclosure">Enclosure</input>
        <input type="checkbox" class="needs" name="Pollinators">Pollinators</input>
        <input type="submit" value="Update Needs">
    </form>


    <%- include('../partials/footer'); %>