<%- include('../partials/header') %>

<div id="posts">
    
        <% posts.forEach(function(p) { %>

            
            <h2 id="title"></h2>
            <h4 id="topic"><%= p.topic %></h4>
        <div class="crop">
            <img src="<%= p.image %>" width="85%">
         </div>   
            <p name="content"><%= p.content %></p>
            <a href="/posts/<%= p._id %>">details</a>
           
            
       <% }) %>
    
   
</div>


