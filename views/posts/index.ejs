<%- include('../partials/header') %>

<div id="posts">
    
        <% posts.forEach(function(p) { %>

            
            <h2 id="title"></h2>
            <h4 id="topic"><%= p.topic %></h4>
            <img src="<%= p.image %>">
            <textarea name="content"><%= p.content %></textarea>
            <a href="/posts/<%= p._id %>/comments">Add Comment</a>
            <a href="/posts/<%= p._id %>">details</a>
           
            
       <% }) %>
    
   
</div>


